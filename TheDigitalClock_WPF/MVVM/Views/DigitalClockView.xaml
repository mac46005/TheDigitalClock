<UserControl x:Class="TheDigitalClock_WPF.MVVM.Views.DigitalClockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheDigitalClock_WPF.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             xmlns:viewModels="clr-namespace:TheDigitalClock_WPF.MVVM.ViewModels">

    <UserControl.DataContext>
        <viewModels:DigitalClockViewModel/>
    </UserControl.DataContext>

    <Border>
        <Grid>
            <Viewbox>
                <StackPanel>
                    <TextBlock Text="{Binding TheDate}"/>
                    <TextBlock Text="{Binding TheTime}"/>
                </StackPanel>
            </Viewbox>
        </Grid>
    </Border>


</UserControl>
